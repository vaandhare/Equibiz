<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.ProductActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/category1_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark_blue"
        app:menu="@menu/cart_share"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/img_back_all_category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:src="@drawable/ic_keyboard_arrow_left" />

        <TextView
            android:id="@+id/tv_all_categories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/product_name"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="25sp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:id="@+id/product_srollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category1_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_poster_imag"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/product_poster_image" />

            <!--            <androidx.viewpager2.widget.ViewPager2-->
            <!--                android:id="@+id/product_poster_view_pager2"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="250dp"/>-->

            <TextView
                android:id="@+id/tvP_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/product_name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvP_product_specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/product_specifications"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:paddingStart="40dp"
                    android:text="Total Stock"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:text="Average Price"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvP_total_stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:paddingStart="70dp"
                    android:paddingEnd="5dp"
                    android:text="---"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvP_avg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="90dp"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/technical_specifications"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/ram"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_ram"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/expandable_upto"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_expandableRam"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/internal_storage"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_internalRam"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/front_camera"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_frontCam"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/primary_camera"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_primaryCam"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/os"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_OS"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/battery_capacity"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_battery"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/network"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_network"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/sim_slots"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_sims"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/dimensions"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_dimensions"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/screen_size"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_screenSize"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text="@string/processor"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvP_processor"
                            android:fontFamily="@font/montserrat"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/black" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/seller"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:text="@string/seller_name"
                android:textColor="@color/black" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:text="@string/total_quantity"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPS_totalQuantity"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:text="@string/price_per_unit"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPS_ppu"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:text="Location"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPS_location"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:text="@string/color"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPS_color"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:text="Delivery Time (Days)"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPS_deliveryTime"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:text="@string/order_quantity"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etvPS_orderQuanitity"
                        android:fontFamily="@font/montserrat"
                        android:hint="5"
                        android:inputType="number"
                        android:padding="5dp"
                        android:importantForAutofill="no"
                        android:maxLength="3"
                        android:textColor="@color/black" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btn_pro_book_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_bg"
                android:text="@string/book_now"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>